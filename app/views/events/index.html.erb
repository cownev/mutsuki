<h1>Listing Events</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Date</th>
      <th>CreatorId</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.creator_user_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate(@events) %>

<br>

<%= button_to 'Create New Event', new_event_path, method: :get, class: 'btn btn-primary' %>
