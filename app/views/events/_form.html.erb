<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, 
      use_two_digit_numbers: true,
      date_separator: ' - '
    %>
  </div>
  <div class="field">
    <label>Private Event ?</label> 
    <label class="radio inline"><%= f.radio_button :private_flg, 'true', checked: true %>Yes</label>
    <label class="radio inline"><%= f.radio_button :private_flg, 'false' %>No</label>
  </div><br>
  <div class="actions">
    <%= f.submit 'Register Event', data: {confirm: 'Are you sure ?', disable_with: 'Waiting...'}, class: 'btn btn-primary' %>
  </div>
<% end %>
